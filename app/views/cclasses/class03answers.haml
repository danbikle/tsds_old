          %code
            import numpy as np
            array1_a = np.array([1.1,2.2,3.39])
            print(np.mean(array1_a))
            print(np.median(array1_a))
            array2_a = np.array([1.1, 3.2, 2.39])
            \# Show corrcoef as 4 combinations:
            \# array1_a and array1_a
            \# array1_a and array2_a
            \# array2_a and array1_a
            \# array2_a and array2_a
            print(np.corrcoef(array1_a, array2_a))
            \# I probably want only one combination:
            print(np.corrcoef(array1_a, array2_a)[0,1]) # I probably want this.
            print(np.sum(array1_a))
            print(np.size(array1_a))
            print(np.std(array1_a))
      %li
